@page
@using KitapYorum.Entites.Contexts
@model KitapYorum.RazorPage.Pages.Yazarlar.IndexModel
@{
    Layout = "_Layout2";
}

@if(Model.Yazarlar!=null )
{
   
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Cinsiyet</th>
                <th>Dogum Tarihi</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Yazarlar)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.Cinsiyet</td>
                    <td>@item.DogumTarihi.Value.ToShortDateString()</td>
                    <th>

                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    </th>

                </tr>
            }
        </tbody>
        </table>
    
}

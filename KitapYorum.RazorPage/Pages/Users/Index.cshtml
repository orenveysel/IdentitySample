@page
@model KitapYorum.RazorPage.Pages.Users.IndexModel
@{
}
<a asp-page="Create"  class="btn btn-primary">Yeni Kullanici Ekle</a>
<table class="table table-hover">
    <thead>
        <tr> 
            
            <th>UserName</th>
            <th>Email</th>
            <th>TcNo</th>
            <th>Cinsiyet</th>
            <th>Roller</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Kullanicilar != null )
        @foreach (var item in Model.Kullanicilar)
        {
            <tr>
               
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.TcNo</td>
                <td>@item.Cinsiyet</td>
                    <td>@item.RoleName</td>
                <td><a class="btn btn-dark" asp-page="Edit" asp-route-id="@item.UserId">Edit</a></td>
                <td><a class="btn btn-danger" asp-page="Delete" asp-route-id="@item.UserId">Delete</a></td>

            </tr>
        }
    </tbody>
</table>
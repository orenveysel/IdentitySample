@page
@model KitapYorum.RazorPage.Pages.Account.LoginModel
@{
    Layout = "_Layout2";
}
<div class="card">
    <div class="card-header">
        <h3>Login </h3>
       
    </div>
    <div class="card-body">
        <form  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="@Model.LoginVm.Email">
                    Username
                </label>
                <div class="col-sm-6">
                    <input class="form-control"
                           asp-for="@Model.LoginVm.Email"                           placeholder="Email Adress Giriniz">
                    <span asp-validation-for="@Model.LoginVm.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="@Model.LoginVm.Password">
                    Username
                </label>
                <div class="col-sm-6">
                    <input class="form-control"
                           asp-for="@Model.LoginVm.Password" placeholder="Sifre   Giriniz">
                    <span asp-validation-for="@Model.LoginVm.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="@Model.LoginVm.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="@Model.LoginVm.RememberMe" />
                    @Html.DisplayNameFor(m => m.LoginVm.RememberMe)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Giris</button>
           
        </form>
    </div>
    <div class="card-footer">
        <a type="button" class="btn btn-success" asp-page="/Users/Create">Kayit Ol</a>
        <a type="button" class="btn btn-success" asp-page="/Index">Ana Sayfaya Dön</a>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
